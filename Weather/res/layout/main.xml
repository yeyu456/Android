<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<ImageView
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:layout_gravity="right"
	    android:background="@drawable/cloudy" />

    <TextView
        android:id="@+id/climate_celsius"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal|center"
        android:textSize="50sp" />
	<TableRow 
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:layout_weight="3">

		<LinearLayout
		    android:id="@+id/forcast_1"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center_vertical|center_horizontal|center"
		    android:orientation="vertical" >

		    <include layout="@layout/forcast_merge_layout"/>
		</LinearLayout>

		<LinearLayout
		    android:id="@+id/forcast_2"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:background="@drawable/forcast_view_background"
		    android:gravity="center_vertical|center_horizontal|center"
		    android:orientation="vertical" >

		    <include layout="@layout/forcast_merge_layout"/>
		</LinearLayout>

		<LinearLayout
		    android:id="@+id/forcast_3"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center_vertical|center_horizontal|center"
		    android:orientation="vertical" >

		    <include layout="@layout/forcast_merge_layout"/>
		</LinearLayout>
	</TableRow>
</LinearLayout>
