<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout 
    	xmlns:android="http://schemas.android.com/apk/res/android" 
    	xmlns:app="http://schemas.android.com/apk/res/com.yeyu.weather"
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

	<ScrollView 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" >
        
	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >
        
	<com.yeyu.widget.cardview.CardView
	    android:id="@+id/cardview_1"
	    android:layout_width="match_parent"
	    android:layout_height="160dp"
	    android:layout_marginBottom="1dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginTop="4dp"
	    app:cardBackgroundColor="#FF5722"
	    app:cardCornerRadius="4dp" >
	    <Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|top"
	        android:gravity="center"
	        android:id="@+id/address"
	        android:layout_margin="8dp"
	        android:background="#00000000" />

		<ImageView
	    	android:layout_width="60dp"
	    	android:layout_height="60dp"
	    	android:layout_gravity="left|center_vertical"
	    	android:layout_margin="4dp"
	    	android:id="@+id/climate_icon" />
	   
    	<TextView
        	android:id="@+id/climate_celsius"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:layout_weight="2"
	    	android:layout_gravity="center_horizontal|center_vertical"
        	android:gravity="left|center_vertical"
        	android:padding="16dp"
        	android:text="-\u2103"
        	android:textSize="30sp" />

    	<Button
        	android:id="@+id/more"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="bottom|right"
        	android:layout_marginBottom="2dp"
        	android:layout_marginRight="4dp"
        	android:background="#20000000"
        	android:minHeight="36dp"
        	android:minWidth="48dp"
        	android:text="更多"
        	android:textSize="14sp" />
    	
    </com.yeyu.widget.cardview.CardView>

	<com.yeyu.widget.cardview.CardView
	    android:id="@+id/cardview_2"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_marginBottom="1dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginTop="1dp"
	    app:cardBackgroundColor="#FFEB3B"
	    app:cardCornerRadius="4dp" >
	    <include layout="@layout/fragment_main_card_view" />
    </com.yeyu.widget.cardview.CardView>
    
	<com.yeyu.widget.cardview.CardView
	    android:id="@+id/cardview_3"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_marginBottom="1dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginTop="1dp"
	    app:cardBackgroundColor="#607D8B"
	    app:cardCornerRadius="4dp" >
	    <include layout="@layout/fragment_main_card_view" />
    </com.yeyu.widget.cardview.CardView>
    
	<com.yeyu.widget.cardview.CardView
	    android:id="@+id/cardview_4"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_marginBottom="1dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginTop="1dp"
	    app:cardBackgroundColor="#FAFAFA"
	    app:cardCornerRadius="4dp" >
	    <include layout="@layout/fragment_main_card_view" />
    </com.yeyu.widget.cardview.CardView>
    
	<com.yeyu.widget.cardview.CardView
	    android:id="@+id/cardview_5"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_marginBottom="1dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginTop="1dp"
	    app:cardBackgroundColor="#CFD8DC"
	    app:cardCornerRadius="4dp" >
	    <include layout="@layout/fragment_main_card_view" />
    </com.yeyu.widget.cardview.CardView>
    
	<com.yeyu.widget.cardview.CardView
	    android:id="@+id/cardview_6"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_marginBottom="1dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginTop="1dp"
	    app:cardBackgroundColor="#259B24"
	    app:cardCornerRadius="0dp" >
	    <include layout="@layout/fragment_main_card_view" />
    </com.yeyu.widget.cardview.CardView>
    
	<com.yeyu.widget.cardview.CardView
	    android:id="@+id/cardview_7"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_marginBottom="1dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginTop="1dp"
	    app:cardBackgroundColor="#FFEB3B"
	    app:cardCornerRadius="4dp" >
	    <include layout="@layout/fragment_main_card_view" />
    </com.yeyu.widget.cardview.CardView>
    
	</LinearLayout>
	
	</ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>  
